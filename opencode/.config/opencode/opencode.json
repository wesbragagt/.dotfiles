{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"server-fetch": {
			"type": "local",
			"command": [
				"uvx",
				"mcp-server-fetch"
			]
		},
		"playwright": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@playwright/mcp@latest"
			]
		},
		"excel": {
			"type": "local",
			"command": [
				"uvx",
				"excel-mcp-server"
			]
		},
		"context7": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"@upstash/context7-mcp@latest"
			]
		}
	}
}
