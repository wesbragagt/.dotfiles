{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "server-fetch": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-fetch"
      ]
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest",
        "--isolated"
      ]
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "ddg-search": {
      "type": "local",
      "command": [
        "uvx",
        "duckduckgo-mcp-server"
      ]
    }
  }
}
