{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "alibayram/Qwen3-30B-A3B-Instruct-2507:latest": {
          "name": "Ollama/Qwen3-30B-A3B-Instruct-2507",
          "reasoning": true,
          "options": {
            "num_ctx": 65536
          }
        }
      }
    }
  },
  "mcp": {
    "server-fetch": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-fetch"
      ]
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ]
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "notes-mcp": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "-v={env:HOME}/notes:/home/app/notes:rw",
        "notes-mcp",
        "python",
        "main.py"
      ]
    }
  }
}
