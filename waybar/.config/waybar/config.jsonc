// -*- mode: jsonc -*-
{
  "layer": "top",
  "position": "top",
  "height": 40,
  "spacing": 6,
  // Choose the order of the modules
  "modules-left": [
    "hyprland/window"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
    "pulseaudio",
    "network",
    "cpu",
    "memory",
    "disk",
    "tray",
    "clock"
  ],
  "hyprland/workspaces": {
    "format": "{name}: {windows}", // Example format
    "format-window-separator": " ",
    "window-rewrite-default": "ÔÅô", // Default icon for unknown windows
    "window-rewrite": {
      "class<zen>": "Ôâ©", // Firefox icon
      "class<foot>": "Óûï", // Foot terminal icon
      "title<.*youtube.*>": "ÔÖ™", // YouTube icon by title
      "title<.*slack.*>": "Ó¢§",
      "class<Spotify>": "ÔÜº",
      "class<DBeaver>": "Û∞Üº",
      "class<thunar>": "Ôí•",
      "class<libreoffice-calc>": "Û±éè",
      "title<.*chrome.*>": "ÓùÉ",
      "title<.*roam.*": "ÔÄΩ",
      "class<Bitwarden>": "ÔÄ£"
      // Add more rules for other applications
    }
  },
  "hyprland/window": {
    "max-length": 40,
    "seperate-outputs": false
  },
  "tray": {
    "spacing": 20
  },
  "clock": {
    "format": "ÔÄó {:%I:%M %p  %b %d, %Y}",
    "tooltip-format": "<big>{:%A, %B %d, %Y}</big>"
  },
  "cpu": {
    "format": "CPU: {usage}%",
    "tooltip": false
  },
  "memory": {
    "format": "üß† {used}GiB/{total}GiB",
    "tooltip": true,
    "tooltip-format": "Memory: {used}GiB / {total}GiB"
  },
  "disk": {
    "interval": 60,
    "path": "/",
    "format": "üíæ {free}",
    "tooltip": true,
    "tooltip-format": "Disk: {free} available"
  },
  "network": {
    "format": "Online",
    "format-disconnected": "Disconnected ‚ö†"
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-icons": {
      "default": [
        "\uf026",
        "\uf027",
        "\uf028"
      ]
    },
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-right": "pavucontrol",
    "format-muted": "\uf00d {volume}%"
  }
}
